{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Kataru Config",
    "description": "YAML schema for Kataru config file.",
    "type": "object",
    "properties": {
        "line": {
            "type": "number",
            "description": "The current line number."
        },
        "characters": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string",
                        "description": "The description of the character."
                    }
                },
                "required": [
                    "description"
                ],
                "description": "A character name."
            },
            "description": "A mapping of characters that will appear in the story."
        },
        "state": {
            "type": "object",
            "additionalProperties": {
                "type": "number"
            },
            "description": "A mapping of variable names to their current values."
        },
        "passage": {
            "type": "string",
            "description": "The current passage name."
        }
    },
    "required": [
        "line",
        "characters",
        "state",
        "passage"
    ],
    "additionalProperties": false
}